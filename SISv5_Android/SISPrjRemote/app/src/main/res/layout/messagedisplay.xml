<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tdr.sisprjremote.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/messageToSendListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messages Sent"
        android:textStyle="normal|bold"
        />
    <TextView
        android:id="@+id/messageToSendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/messageToSendListText"
        android:layout_above="@+id/messageReceivedListText"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical"
        />
    <TextView
        android:id="@+id/messageReceivedListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messages Received"
        android:textStyle="normal|bold"
        android:layout_centerInParent="true"

        />
    <TextView
        android:id="@+id/messageReceivedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageReceivedListText"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp" />



</RelativeLayout>
